<% if current_user %>
<%= form_with url: create_medium_community_index_path, multipart: true, local: true, class: "styled-form" do |f| %>

  <div class="form-group">
    <%= f.label :file, "Screenshot File", class: "form-label" %>
    <%= f.file_field :file, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :title, "Screenshot Title", class: "form-label" %>
    <%= f.text_field :meta_description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :meta_keywords, "Location", class: "form-label" %>
    <%= f.select :meta_keywords, [["Choose Shard", ""], "Atrevion", "Britannia"], {}, { class: "form-select" } %>
  </div>

  <div class="form-group">
    <%= f.submit "Upload Screenshot", class: "pushable button" %>
  </div>

<% end %>
<% end %>
