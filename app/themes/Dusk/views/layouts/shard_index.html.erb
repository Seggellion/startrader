<h1>StarBitizen Runs for <%= @shard.name %></h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Commodity</th>
      <th>SCU</th>
      <th>Profit</th>
      <th>Buy Location</th>
      <th>Sell Location</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @star_bitizen_runs.each do |run| %>
      <tr>
        <td><%= run.user.username %></td>
        <td><%= run.commodity_name %></td>
        <td><%= run.scu %></td>
        <td><%= number_with_delimiter(run.profit) %></td>
        <td><%= run.buy_location_name %></td>
        <td><%= run.sell_location_name %></td>
        <td><%= run.created_at.strftime('%Y-%m-%d %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
