<h1 class="text-3xl font-bold mb-4">Categories</h1>
<%= link_to 'New Category', new_admin_category_path, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>

<table class="min-w-full bg-white mt-4 border">
  <thead>
    <tr>
      <th class="py-2 px-4 border">Name</th>
      <th class="py-2 px-4 border">Slug</th>
      <th class="py-2 px-4 border">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="py-2 px-4 border"><%= category.name %></td>
        <td class="py-2 px-4 border"><%= category.slug %></td>
        <td class="py-2 px-4 border">
          <%= link_to 'Edit', edit_admin_category_path(category), class: 'text-blue-500 hover:underline' %> |
          <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
