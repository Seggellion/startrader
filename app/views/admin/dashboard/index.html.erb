<h1 class="text-3xl font-bold mb-4">Admin Dashboard</h1>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
  <!-- At a Glance Section -->
  <div class="bg-white p-6 rounded shadow col-span-2">
    <h2 class="text-xl font-semibold mb-4">At a Glance</h2>
    <ul>
      <li class="mb-2"><strong>1</strong> Post</li>
      <li class="mb-2"><strong>2</strong> Pages</li>
      <li class="mb-2"><strong>1</strong> Comment</li>
    </ul>

    <%= button_to "Avatar Theme", set_theme_path(theme: 'Avatar'), method: :post, class: "btn btn-primary" %>
    <%= button_to "Dusk Theme", set_theme_path(theme: 'Dusk'), method: :post, class: "btn btn-secondary" %>
    

<div class="data-sync">
    <%= button_to 'Import Ships', import_ships_admin_data_path, method: :post %>

<%= button_to "Check Status",
              send_check_status_path(streamer: "Seggellion"),
              method: :post,
              class: "bg-blue-500 text-white px-4 py-2 rounded" %>

                
    </div>


<div class="controls">
    <!-- e.g., app/views/admin/dashboard.html.erb -->
<% running = TickControl.instance.running? %>

<% if running %>
  <%= button_to "Stop ticks", admin_stop_tick_path,
        method: :post,
        data: { turbo_confirm: "Stop the tick engine?" },
        class: "bg-red-500 text-white px-4 py-2 rounded" %>
<% else %>
  <%= button_to "Start ticks", admin_start_tick_path,
        method: :post,
        class: "bg-blue-500 text-white px-4 py-2 rounded" %>
<% end %>

<p>Status: <strong><%= running ? "Running" : "Stopped" %></strong></p>
</div>



  </div>

  <!-- Quick Draft Section -->
  <div class="bg-white p-6 rounded shadow">
    <h2 class="text-xl font-semibold mb-4">Quick Draft</h2>
    <form>
      <div class="mb-4">
        <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
        <input type="text" name="title" id="title" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
      </div>
      <div class="mb-4">
        <label for="content" class="block text-sm font-medium text-gray-700">What's on your mind?</label>
        <textarea id="content" name="content" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Save Draft</button>
    </form>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-4 mt-4">
  <!-- Activity Section -->
  <div class="bg-white p-6 rounded shadow col-span-2">
    <h2 class="text-xl font-semibold mb-4">Activity</h2>
    <div class="mb-4">
      <h3 class="text-lg font-semibold">Recently Published</h3>
      <p>Nov 9th, 7:59 am - <a href="#" class="text-blue-500 hover:underline">Hello world!</a></p>
    </div>
