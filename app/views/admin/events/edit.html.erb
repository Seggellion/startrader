<h1 class="text-3xl font-bold mb-4">Edit Event</h1>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
  <!-- Main Content Area -->
  <div class="lg:col-span-2 bg-white p-6 rounded shadow">
    <%= form_with model: [:admin, @event], local: true, data: { turbo: true } do |form| %>
      <div class="mb-4">
        <%= form.label :title, "Title", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      
      <div class="mb-4">
      <%= form.label :location, "Location", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :location, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

      <div class="mb-4">
        <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
        <%= form.rich_text_area :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
        
      <div class="mb-4">
      <%= form.label :start_time, 'Start Time', class: 'block text-gray-700' %>
      <%= form.datetime_select :start_time, class: 'form-input mt-1 block w-full' %>
    </div>
  
    <div class="mb-4">
      <%= form.label :end_time, 'End Time', class: 'block text-gray-700' %>
      <%= form.datetime_select :end_time, class: 'form-input mt-1 block w-full' %>
    </div>

      <div class="mb-4 flex justify-end">
        <%= form.submit "Publish", class: "bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Sidebar -->
  <div class="space-y-4">
    <!-- Publish Box -->
    <div class="bg-white p-6 rounded shadow">
      <h2 class="text-xl font-semibold mb-4">Publish</h2>
      <div class="mb-4">
        <button class="bg-blue-500 text-white px-4 py-2 rounded w-full">Save Draft</button>
      </div>
      <div class="mb-4">
        <span class="block text-sm text-gray-700">Status: <strong>Draft</strong></span>
        <span class="block text-sm text-gray-700">Visibility: <strong>Public</strong></span>
        <span class="block text-sm text-gray-700">Publish: <strong>Immediately</strong></span>
      </div>
      <div class="mb-4 flex justify-end">
        <%= form_with model: [:admin, @event], local: true do |form| %>
          <%= form.submit "Publish", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
        <% end %>
      </div>
    </div>

    <!-- Categories Box -->
    <div class="bg-white p-6 rounded shadow">
      <h2 class="text-xl font-semibold mb-4">Categories</h2>
      <div>
      <select id="category-select" name="category_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" data-category-selector-target="select">
        <option value="">Select a category</option>
        <% Category.all.each do |category| %>
          <option value="<%= category.id %>" <%= 'selected' if @event.category_id == category.id %>><%= category.name %></option>
        <% end %>
      </select>
      </div>
      <div class="mt-2">
        <a href="#" class="text-blue-500 hover:underline text-sm">+ Add New Category</a>
      </div>
    </div>

    <!-- Featured Image Box -->
    <div class="bg-white p-6 rounded shadow">
      <h2 class="text-xl font-semibold mb-4">Featured Image</h2>
      <%= form_with model: [:admin, @event], local: true, html: { multipart: true } do |form| %>
        <div class="mb-4">
          <%= form.label :featured_image, "Featured Image", class: "block text-sm font-medium text-gray-700" %>
          <%= form.file_field :featured_image, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div class="mb-4 flex justify-end">
          <%= form.submit "Upload", class: "bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
