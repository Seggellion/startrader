<div class="container mx-auto">
  <h1 class="text-2xl font-bold mb-4">Menus</h1>
  <%= link_to 'New Menu', new_admin_menu_path, class: 'btn btn-primary mb-4' %>
  <table class="min-w-full bg-white">
    <thead>
      <tr>
        <th class="py-2">Name</th>
        <th class="py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @menus.each do |menu| %>
        <tr>
          <td class="py-2"><%= menu.name %></td>
          <td class="py-2">
            <%= link_to 'Edit', edit_admin_menu_path(menu), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', admin_menu_path(menu), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>

            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
