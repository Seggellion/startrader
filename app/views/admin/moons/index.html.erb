<div class="bg-white p-6 rounded shadow">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Moons</h1>
    <%= button_to 'Delete All Moons', delete_all_admin_moons_path, 
    class: 'bg-red-500 text-white px-4 py-2 rounded', 
    method: :delete, 
    data: { confirm: 'Are you sure you want to delete all moons? This action cannot be undone.' } %>

        <%= button_to 'Import Moons', import_moons_admin_data_path, class: 'bg-blue-500 text-white px-4 py-2 rounded', method: :post %>
    <%= link_to 'Add New', new_admin_moon_path, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
  </div>

  <table class="min-w-full bg-white mt-4 border">
    <thead>
      <tr>
        <th class="py-2 px-4 border">Name</th>
        <th class="py-2 px-4 border">Type</th>
        <th class="py-2 px-4 border">Parent</th>
        <th class="py-2 px-4 border">Date</th>
      </tr>
    </thead>
    <tbody>
      <% @moons.each do |moon| %>
        <tr>
          <td class="py-2 px-4 border"><%= moon.name %></td>
          <td class="py-2 px-4 border"><%= moon.classification %></td>
          <td class="py-2 px-4 border"><%= moon.parent&.name %></td>
          <td class="py-2 px-4 border"><%= moon.created_at.strftime('%Y-%m-%d') %></td>
          <td class="py-2 px-4 border">
            <%= link_to 'Edit', edit_admin_moon_path(moon), class: 'text-blue-500 hover:underline' %> |
            <%= link_to 'Delete', admin_moon_path(moon), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
