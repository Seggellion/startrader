<h1 class="text-3xl font-bold mb-4">Edit Facility</h1>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
  <!-- Main Content Area -->
  <div class="lg:col-span-2 bg-white p-6 rounded shadow">
  <div class="bg-white p-6 rounded shadow">
  <%= form_with model: [:admin, @production_facility], local: true, data: { turbo: true } do |form| %>
    <div class="mb-4">
      <%= form.label :facility_name, "Facility Name", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :facility_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
    <div class="mb-4">
      <%= form.label :commodity_id, "Commodity", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :commodity_id, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
    <div class="mb-4">
      <%= form.label :location_name, "Location", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :location_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
    <div class="mb-4">
      <%= form.label :production_rate, "Production Rate", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :production_rate, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
    <div class="mb-4">
      <%= form.label :consumption_rate, "Consumption Rate", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :consumption_rate, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
    <div class="mb-4">
      <%= form.label :inventory, "Inventory", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :inventory, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
    <div class="mb-4">
      <%= form.label :max_inventory, "Max Inventory", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :max_inventory, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
    <div class="mb-4">
      <%= form.label :local_buy_price, "Local Buy Price", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :local_buy_price, step: "0.01", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
    <div class="mb-4">
      <%= form.label :local_sell_price, "Local Sell Price", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :local_sell_price, step: "0.01", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
    <div class="mb-4 flex justify-end">
      <%= form.submit "Save", class: "bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
    </div>
  <% end %>
  
    </div>
    
  <div class="bg-white p-6 rounded shadow mt-6">
    <%= form_with model: [:admin, @production_facility], local: true, data: { turbo: true } do |form| %>
      <div class="mb-4">
      <%= form.label :meta_description, 'Meta Description', class: 'block text-gray-700' %>
      <%= form.text_area :meta_description, class: 'form-input mt-1 block w-full' %>
      </div>
      <div class="mb-4">
      <%= form.label :meta_keywords, 'Meta Keywords', class: 'block text-gray-700' %>
      <%= form.text_area :meta_keywords, class: 'form-input mt-1 block w-full' %>
      </div>
      <div class="mb-4 flex justify-end">
        <%= form.submit "Save", class: "bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
      </div>
    <% end %>
  </div>

  </div>



  <!-- Sidebar -->
  <div class="space-y-4">
    <!-- Publish Box -->
    <div class="bg-white p-6 rounded shadow">
      <h2 class="text-xl font-semibold mb-4">Publish</h2>
      <div class="mb-4">
        <button class="bg-blue-500 text-white px-4 py-2 rounded w-full">Save Draft</button>
      </div>
      <div class="mb-4">
        <span class="block text-sm text-gray-700">Status: <strong>Draft</strong></span>
        <span class="block text-sm text-gray-700">Visibility: <strong>Public</strong></span>
        <span class="block text-sm text-gray-700">Publish: <strong>Immediately</strong></span>
      </div>
      <div class="mb-4 flex justify-end">
        <%= form_with model: [:admin, @production_facility], local: true do |form| %>
          <%= form.submit "Publish", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
        <% end %>
      </div>
    </div>

    <!-- Categories Box -->
    <div class="bg-white p-6 rounded shadow" data-model-id="<%= @production_facility.id %>" data-model-name="production_facility" data-controller="category-selector">
      <h2 class="text-xl font-semibold mb-4">Categories</h2>
      <div>
        <label class="block text-sm font-medium text-gray-700" for="category-select">Select Category</label>
        <select id="category-select" name="category_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" data-category-selector-target="select">
          <option value="">Select a category</option>
          <% Category.all.each do |category| %>
            <option value="<%= category.id %>" <%= 'selected' if @production_facility.category_id == category.id %>><%= category.name %></option>
          <% end %>
        </select>
      </div>
    </div>


    <!-- Featured Image Box -->
    <div class="bg-white p-6 rounded shadow">
    
    </div>
  </div>
</div>
