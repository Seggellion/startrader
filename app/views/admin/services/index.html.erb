<h1 class="text-3xl font-bold mb-4">Services</h1>
<%= link_to 'New Service', new_admin_service_path, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>

<table class="min-w-full bg-white mt-4 border">
  <thead>
    <tr>
      <th class="py-2 px-4 border">Title</th>
      <th class="py-2 px-4 border">Category</th>
      <th class="py-2 px-4 border">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td class="py-2 px-4 border"><%= service.title %></td>
        <td class="py-2 px-4 border"><%= service.category&.name %></td>
        <td class="py-2 px-4 border">
          <%= link_to 'Edit', edit_admin_service_path(service), class: 'text-blue-500 hover:underline' %> |
          <%= link_to 'Delete', admin_service_path(service), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
