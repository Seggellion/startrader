<div class="bg-white p-6 rounded shadow">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Shards</h1>

    <%= link_to 'Add New', new_admin_shard_path, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
  </div>

  <table class="min-w-full bg-white mt-4 border">
    <thead>
      <tr>
        <th class="py-2 px-4 border">Name</th>
        <th class="py-2 px-4 border">Region</th>
        <th class="py-2 px-4 border">ShardUsers</th>
        <th class="py-2 px-4 border">Date_created</th>
      </tr>
    </thead>
    <tbody>
      <% @shards.each do |shard| %>
        <tr>
          <td class="py-2 px-4 border"><%= shard.name %></td>
                    <td class="py-2 px-4 border"><%= shard.region %></td>
          <td class="py-2 px-4 border"><%= shard.shard_users.count %></td>

          <td class="py-2 px-4 border"><%= shard.created_at.strftime('%Y-%m-%d') %></td>
          <td class="py-2 px-4 border">
            <%= link_to 'Edit', edit_admin_shard_path(shard), class: 'text-blue-500 hover:underline' %> |
            <%= link_to 'Delete', admin_shard_path(shard), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
