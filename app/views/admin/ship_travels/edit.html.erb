  <h1 class="text-3xl font-bold mb-4">Edit Ship Travel</h1>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    <!-- Main Content Area -->
    <div class="lg:col-span-2 bg-white p-6 rounded shadow">
    <div class="bg-white p-6 rounded shadow">
     

    <div style="font-weight:bold;">
    User:
<%= @ship_travel.user_ship.user.username %>
    </div>

    <div>
    From Location:
<%= @ship_travel.from_location.name %>
    </div>

        <div>
    Departure Tick:
<%= @ship_travel.departure_tick %>
    </div>

    <div>
    To Location:
<%= @ship_travel.to_location.name %>
    </div>

<div>
    Arrival Tick:
<%= @ship_travel.arrival_tick %>
    </div>

    <div>
    paused? :
<%= @ship_travel.is_paused %>
    </div>

    <div>
    SpaceShip:
<%= @ship_travel.user_ship.ship.model %>
    </div>

      </div>
      

      
    </div>



    <!-- Sidebar -->
    <div class="space-y-4">
      <!-- Publish Box -->
      <div class="bg-white p-6 rounded shadow">
        <h2 class="text-xl font-semibold mb-4">Publish</h2>
        <div class="mb-4">
          <button class="bg-blue-500 text-white px-4 py-2 rounded w-full">Save Draft</button>
        </div>
        <div class="mb-4">
          <span class="block text-sm text-gray-700">Status: <strong>Draft</strong></span>
          <span class="block text-sm text-gray-700">Visibility: <strong>Public</strong></span>
          <span class="block text-sm text-gray-700">Publish: <strong>Immediately</strong></span>
        </div>
        <div class="mb-4 flex justify-end">
          <%= form_with model: [:admin, @ship_travel], local: true do |form| %>
            <%= form.submit "Publish", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
          <% end %>
        </div>
      </div>

      <!-- Categories Box -->
      <div class="bg-white p-6 rounded shadow" data-model-id="<%= @ship_travel.id %>" data-model-name="ship_travel" data-controller="category-selector">
        <h2 class="text-xl font-semibold mb-4">Categories</h2>
        <div>
          <label class="block text-sm font-medium text-gray-700" for="category-select">Select Category</label>
          <select id="category-select" name="category_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" data-category-selector-target="select">
            <option value="">Select a category</option>
            <% Category.all.each do |category| %>
              <option value="<%= category.id %>" <%= 'selected' if @ship_travel.category_id == category.id %>><%= category.name %></option>
            <% end %>
          </select>
        </div>
      </div>

      <!-- Templates Box -->
      <div class="bg-white p-6 rounded shadow" data-model-id="<%= @ship_travel.id %>" data-model-name="ship_travel" data-controller="template-selector">
        <h2 class="text-xl font-semibold mb-4">Templates</h2>
        <div>

        </div>
      </div>

      <!-- Featured Image Box -->
      <div class="bg-white p-6 rounded shadow">
        <h2 class="text-xl font-semibold mb-4">Featured Image</h2>

      </div>
    </div>
  </div>
