  <h1 class="text-3xl font-bold mb-4">Edit StarBitizenRun</h1>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    <!-- Main Content Area -->
    <div class="lg:col-span-2 bg-white p-6 rounded shadow">
    <div class="bg-white p-6 rounded shadow">
     
    <div class="mb-4">
    <small>Commodity: <%= @star_bitizen_run.commodity_name %>  <br>SCU: <%= @star_bitizen_run.scu %> | Buy price: <%= @star_bitizen_run.local_buy_price %> | Sell price: <%= @star_bitizen_run.local_sell_price %> | Profit: <%= @star_bitizen_run.profit %> </small>
    </div>

    <div class="mb-4">
    <%= @star_bitizen_run.user.username %> | <%= @star_bitizen_run.user_ship.ship.model %> 
    </div>

    <%= form_with model: @star_bitizen_run, url: admin_star_bitizen_run_path(@star_bitizen_run), method: :patch, local: true, data: { turbo: true } do |form| %>
      <div class="mb-4">
        <%= form.label :shard, 'Shard', class: 'block text-gray-700' %>
        <%= form.text_field :shard, class: 'form-input mt-1 block w-full' %>
      </div>
    
      <div class="mb-4">
      <%= form.label :buy_location_name, 'buy_location_name', class: 'block text-gray-700' %>
      <%= form.text_field :buy_location_name, class: 'form-input mt-1 block w-full' %>
    </div>

    <div class="mb-4">
    <%= form.label :sell_location_name, 'sell_location_name', class: 'block text-gray-700' %>
    <%= form.text_field :sell_location_name, class: 'form-input mt-1 block w-full' %>
  </div>


      <div class="mb-4 flex justify-end">
        <%= form.submit "Save", class: "bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
      </div>
    <% end %>
    

      </div>
      

      
    </div>



    <!-- Sidebar -->
    <div class="space-y-4">
      <!-- Publish Box -->
      <div class="bg-white p-6 rounded shadow">
        <h2 class="text-xl font-semibold mb-4">Publish</h2>
        <div class="mb-4">
          <button class="bg-blue-500 text-white px-4 py-2 rounded w-full">Save Draft</button>
        </div>
        <div class="mb-4">
          <span class="block text-sm text-gray-700">Status: <strong>Draft</strong></span>
          <span class="block text-sm text-gray-700">Visibility: <strong>Public</strong></span>
          <span class="block text-sm text-gray-700">Publish: <strong>Immediately</strong></span>
        </div>
        <div class="mb-4 flex justify-end">
          <%= form_with model: [:admin, @star_bitizen_run], local: true do |form| %>
            <%= form.submit "Publish", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
          <% end %>
        </div>
      </div>

      <!-- Categories Box -->
      <div class="bg-white p-6 rounded shadow" data-model-id="<%= @star_bitizen_run.id %>" data-model-name="star_bitizen_run" data-controller="category-selector">
        <h2 class="text-xl font-semibold mb-4">Categories</h2>
        <div>
          <label class="block text-sm font-medium text-gray-700" for="category-select">Select Category</label>
          <select id="category-select" name="category_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" data-category-selector-target="select">
            <option value="">Select a category</option>
            <% Category.all.each do |category| %>
              <option value="<%= category.id %>" <%= 'selected' if @star_bitizen_run.category_id == category.id %>><%= category.name %></option>
            <% end %>
          </select>
        </div>
      </div>

      <!-- Templates Box -->
      <div class="bg-white p-6 rounded shadow" data-model-id="<%= @star_bitizen_run.id %>" data-model-name="star_bitizen_run" data-controller="template-selector">
        <h2 class="text-xl font-semibold mb-4">Templates</h2>
        <div>

        </div>
      </div>

      <!-- Featured Image Box -->
      <div class="bg-white p-6 rounded shadow">
        <h2 class="text-xl font-semibold mb-4">Featured Image</h2>

      </div>
    </div>
  </div>
