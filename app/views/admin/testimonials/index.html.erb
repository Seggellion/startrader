<h1 class="text-3xl font-bold mb-4">Testimonials</h1>
<%= link_to 'New Testimonial', new_admin_testimonial_path, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>

<table class="min-w-full bg-white mt-4 border">
  <thead>
    <tr>
      <th class="py-2 px-4 border">Author</th>
      <th class="py-2 px-4 border">Category</th>
      <th class="py-2 px-4 border">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @testimonials.each do |testimonial| %>
      <tr>
        <td class="py-2 px-4 border"><%= testimonial.title %></td>
        <td class="py-2 px-4 border"><%= testimonial.category&.name %></td>
        <td class="py-2 px-4 border">
          <%= link_to 'Edit', edit_admin_testimonial_path(testimonial), class: 'text-blue-500 hover:underline' %> |
          <%= link_to 'Delete', admin_testimonial_path(testimonial), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
