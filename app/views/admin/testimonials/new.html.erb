<h1 class="text-3xl font-bold mb-4">Add New Testimonial</h1>

<%= form_with model: [:admin, @testimonial], local: true do |form| %>
  <div class="mb-4">
    <%= form.label :title, "Author", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :content, "Content", class: "block text-sm font-medium text-gray-700" %>
        <%= form.rich_text_area :content, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :category_id, "Category", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, include_blank: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4 flex justify-end">
    <%= form.submit "Create Testimonial", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
