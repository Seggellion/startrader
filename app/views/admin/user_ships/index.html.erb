<div class="bg-white p-6 rounded shadow">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">UserShips</h1>
    <%= link_to 'Add New', new_admin_user_ship_path, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
  </div>

  <table class="min-w-full bg-white mt-4 border">
    <thead>
      <tr>
        <th class="py-2 px-4 border">Name</th>
        <th class="py-2 px-4 border">Ship</th>
        <th class="py-2 px-4 border">Cargo</th>
        <th class="py-2 px-4 border">Shard</th>
        <th class="py-2 px-4 border">Status</th>
        <th class="py-2 px-4 border">Date</th>
      </tr>
    </thead>
    <tbody>
      <% @user_ships.each do |user_ship| %>
        <tr>
          <td class="py-2 px-4 border"><%= user_ship.user.username %></td>
          <td class="py-2 px-4 border"><%= user_ship.ship.model %></td>
            <td class="py-2 px-4 border"><%= user_ship.used_scu %> / <%= user_ship.total_scu %> </td>
     <td class="py-2 px-4 border"><%= user_ship.shard_name %></td>
          <td class="py-2 px-4 border"><%= user_ship.status %></td>
          <td class="py-2 px-4 border"><%= user_ship.created_at.strftime('%Y-%m-%d') %></td>
          <td class="py-2 px-4 border">
            <%= link_to 'Edit', edit_admin_user_ship_path(user_ship), class: 'text-blue-500 hover:underline' %> |
            <%= link_to 'Delete', admin_user_ship_path(user_ship), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
