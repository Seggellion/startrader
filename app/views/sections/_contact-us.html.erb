<section class="m-4 lg:m-12" data-controller="google-map" 
      <% if (address = Setting.get('store-address')) %>
  data-google-map-line1="<%= address['line1'] %>"
  data-google-map-line2="<%= address['line2'] %>"
  data-google-map-city="<%= address['city'] %>"
  data-google-map-state="<%= address['state'] %>"
  data-google-map-zip="<%= address['zip'] %>"
  <% end %>
  data-google-map-store-name="<%= Setting.get('store-name') %>"
  >
<%= render '/sections/section_header', section: section %>

  <!-- First Row: Centered Photo -->
  <div class="flex justify-center mb-8">

  
<%= render '/contact_messages/new' %>

  </div>

  <!-- Second Row: Full-width Google Map -->
  <div class="w-full h-96 mb-8" data-google-map-target="map">
  </div>

  <!-- Third Row: Two Columns -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Left Column: Address -->
    <div class="bg-white p-6 rounded-lg shadow-lg text-center">
      <h3 class="text-xl font-semibold mb-4"><%= Setting.get('store-name') %></h3>
      <% if (address = Setting.get('store-address')) %>
      <p class="mb-2"><%= address['line1'] %></p>
      <p class="mb-2"><%= address['line2'] %></p>
      <p class="mb-2"><%= "#{address['city']}, #{address['state']} #{address['zip']}" %></p>
      <% end %>
    </div>

    <!-- Right Column: Contact Info -->
    <div class="bg-white p-6 rounded-lg shadow-lg text-center">
      <h3 class="text-xl font-semibold mb-4">Contact Information</h3>
      <p class="mb-2">Telephone: <%= Setting.get('telephone') %></p>
      <p class="mb-2">Fax: <%= Setting.get('fax') %></p>
      <p class="mb-2">Email: <a href="mailto:<%= Setting.get('email') %>" class="text-blue-500 hover:underline"><%= Setting.get('email') %></a></p>
    </div>
  </div>
</section>


<style>

.info-window-content {
  display: flex;
  align-items: center;
  background: white;
  padding: 5px;
  border-radius: 5px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
}

</style>