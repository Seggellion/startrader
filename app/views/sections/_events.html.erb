
<% custom_events_path = Rails.root.join("app", "themes", current_theme, "views", "sections", "_events.html.erb") %>
<% if File.exist?(custom_events_path) %>
  <%= render file: custom_events_path %>
<% else %>
  <section class="m-4 lg:m-12">
    <%= render '/sections/section_header', section: section %>
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
      <% @events.each do |event| %>
        <%= link_to event_path(event), class: "block bg-white border border-gray-300 rounded-lg shadow-lg mb-8 hover:shadow-xl transition-shadow duration-200" do %>
          <div class="bg-gray-100 h-9 flex items-center justify-center rounded-t-lg">
            <h3 class="text-lg font-bold"><%= event.city %>, <%= event.state_short %></h3>
          </div>
          <div class="p-4 flex flex-col items-center text-center">
            <p class="text-gray-600 mb-2"><%= event.start_time.strftime('%A, %B %e, %Y') %></p>
            <h2 class="text-xl font-bold mb-2"><%= event.title %></h2>
            <p class="text-gray-600 mb-2"><%= event.location %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
<% end %>
